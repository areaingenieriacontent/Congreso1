@model Congreso_1.Models.Stand

@{
    ViewBag.Title = "Create";
}

<h2>Create</h2>


@using (Html.BeginForm("Create", "Stands", FormMethod.Post, new { enctype = "multipart/form-data" }))
{
    @Html.AntiForgeryToken()

    <div class="form-horizontal">
        <h4>Stand</h4>
        <hr />
        <div class="form-group">
            @Html.LabelFor(model => model.StandName, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="StandName" id="StandName">
            </div>
        </div>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        <div class="form-group">
            @Html.LabelFor(model => model.StandTypeId, "StandTypeId", htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                @Html.DropDownList("StandTypeId", null, htmlAttributes: new { @class = "form-control" })
                @Html.ValidationMessageFor(model => model.StandTypeId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnterpriseLogo, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="EnterpriseLogo" id="EnterpriseLogo">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.EnterpriseBanner, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="file" name="EnterpriseBanner" id="EnterpriseBanner">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StandColorA, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="color" class="form-control text-box single-line" id="StandColorA" name="StandColorA" value="#000000">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StandColorB, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="color" class="form-control text-box single-line" id="StandColorB" name="StandColorB" value="#000000">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.StandColorC, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <input type="color" class="form-control text-box single-line" id="StandColorC" name="StandColorC" value="#000000">
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Available, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-10">
                <div class="checkbox">
                    @Html.EditorFor(model => model.Available)
                    @Html.ValidationMessageFor(model => model.Available, "", new { @class = "text-danger" })
                </div>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", "Index")
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
