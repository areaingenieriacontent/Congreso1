@model IEnumerable<Congreso_1.ViewModels.VistaStand>

@{
    ViewBag.Title = "CargarDetalles";
}


    @if (Model.FirstOrDefault().Tamaño == 1)
    {
        <div class="row" style="background: url(../../Archivos/renderpequeño.png); background-size: 100%; background-position-y: -140px;height:auto; background-repeat:no-repeat">
            @foreach (var item in Model)
            {
                if (item.Index == 1)
                {
            <button class="boton1pequeño">1</button>
                }
                if (item.Index == 2)
                {
            <button class="boton2pequeño">2</button>
                }
                if (item.Index == 3)
                {
            <button class="boton3pequeño">3</button>
                }
            }

        </div>
    }
    @if (Model.FirstOrDefault().Tamaño == 2)
    {
        <div class="row" style="background: url(../../Archivos/rendermedio.png); background-size: 100%; height:auto; background-repeat:no-repeat">
        @foreach (var item in Model)
        {
            if (item.Index == 1)
            {
            <button class="boton1medio">1</button>
            }
            if (item.Index == 2)
            {
            <button class="boton2medio">2</button>
            }
            if (item.Index == 3)
            {
            <button class="boton3medio">3</button>
            }
            if (item.Index == 4)
            {
            <button class="boton4medio">4</button>
            }
        }
        </div>
            }
    @if (Model.FirstOrDefault().Tamaño == 3)
    {
        <div class="row" style="background: url(../../Archivos/render.png); background-size: 100%; background-position-y: -140px; height:auto">
        @foreach (var item in Model)
        {
            if (item.Index == 1)
            {
            <button class="boton1grande">1</button>
            }
            if (item.Index == 2)
            {
            <button class="boton2grande">2</button>
            }
            if (item.Index == 3)
            {
            <button class="boton3grande">3</button>
            }
            if (item.Index == 4)
            {
            <button class="boton4grande">4</button>
            }
        }
        </div>

            }


